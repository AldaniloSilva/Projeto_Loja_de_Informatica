@model LojaDeInformatica.Models.ClienteViewModel

@{
    /*ViewData["Title"] = "Form";*/
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<environment include="Development">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/form.css" />
    <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="jquery.js" type="text/javascript"></script>
    <script src="jquery.maskedinput.js" type="text/javascript"></script>



</environment>



<!--<h2>Form</h2>-->

<h2>Cadastro de Clientes</h2>
<hr />
<div class="row">
    <div class="col-md-6">
        <form action="Salvar" method="post">
            <!--<div asp-validation-summary="ModelOnly" class="text-danger"></div>-->
            <input type="hidden" name="Operacao" value="@ViewBag.Operacao" />
            <label for="Id" class="control-label">Codigo do Cliente</label>
            @if (ViewBag.Operacao == "I")
            {
                <input type="number" Name="Id" value="@Model.Id" class="form-control" />
            }
            else
            {
                <input type="number" Name="Id" value="@Model.Id" class="form-control disabled" readonly />
            }
            <span asp-validation-for="Id" class="text-danger"></span>
            <br />

            <label for="Nome" class="control-label">Nome do Cliente</label>
            <input type="text" name="Nome" value="@Model.Nome" class="form-control"
                   required placeholder="Digite o nome completo..." />
            <span asp-validation-for="Nome" class="text-danger"></span>
            <br />

            <label for="Email" class="control-label">E-mail - Será usado como usuario no login</label>
            <input type="email" name="Email" value="@Model.Email" class="form-control"
                   required placeholder="Digite seu e-mail" />
            <span asp-validation-for="Email" class="text-danger"></span>
            <br />

            <div class="row">
                <div class="form-group col-md-6">
                    <label for="rua" class="control-label">Rua</label>
                    <input type="text" name="rua" value="@Model.Rua" id="rua"
                           class="form-control" style="width:300px"
                           required placeholder="Digite seu endereço..." />
                    <span asp-validation-for="Rua" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3" style="margin-left:20px">
                    <label for="numero" class="control-label">Numero</label>
                    <input type="number" name="numero" min="0" value="@Model.Numero" id="numero"
                           class="form-control" style="width:80px" required placeholder="Digite numero da residencia..." />
                    <span asp-validation-for="Numero" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label for="Endereco" class="control-label">Bairro</label>
                    <input type="text" name="bairro" value="@Model.Bairro" id="bairro"
                           class="form-control" style="width:250px"
                           required placeholder="Digite o bairro..." />
                    <span asp-validation-for="Bairro" class="text-danger"></span>
                </div>
            </div>
            <br />

            <label for="Id_Estado" class="control-label">Estado</label>
            <select asp-for="Id_Estado" asp-items="ViewBag.Estado" class="form-control"></select>
            <span asp-validation-for="Id_Estado" class="text-danger"></span>
            <br />

            <label for="Cpf" class="control-label">CPF</label>
            <input type="text" name="Cpf" value="@Model.Cpf" class="form-control" id="cpf"
                   maxlength="11"  required placeholder="Digite seu CPF,somente numeros..." />
            <span asp-validation-for="Cpf" class="text-danger"></span>
            <br />

            <label asp-for="Bonus" class="control-label"></label>
            <input asp-for="Bonus" class="form-control disabled" readonly />
            <span asp-validation-for="Bonus" class="text-danger"></span>
            <br />

            <label for="Senha" class="control-label">Senha</label>
            <input asp-for="Senha" class="form-control" type="password" required placeholder="Digite sua senha..." />
            <span asp-validation-for="Senha" class="text-danger"></span>
            <br />

            <div class="form-group">
                <input type="submit" value="Salvar Cliente" class="btn btn-default" />
            </div>
            <br />
            <span class="text-danger">@ViewBag.Erro</span>

        </form>
        

    </div>
</div>

<div>
    <a asp-action="Index">Voltar a Home</a>
</div>






